<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Título "Nueva categoria" -->
        <TextView
            android:id="@+id/titleNewCategory"
            android:layout_width="165dp"
            android:layout_height="48dp"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#000000"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="9sp"
            android:gravity="center_horizontal"
            android:text="Nueva categoria" />

        <!-- Imagen de la categoría -->
        <ImageView
            android:id="@+id/imageViewCategory"
            android:layout_width="219dp"
            android:layout_height="219dp"
            android:layout_below="@id/titleNewCategory"
            android:layout_marginTop="10dp"
            android:src="@drawable/login_logo_image"
            android:contentDescription="@string/category_image_description"
            android:scaleType="centerCrop"
            android:background="@drawable/et_add_category_placeholder"
            android:clickable="true"
            android:focusable="true" />

        <!-- Botón para seleccionar la imagen -->
        <Button
            android:id="@+id/buttonSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Imagen"
            android:layout_below="@id/imageViewCategory"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />

        <!-- Nombre de la categoría -->
        <TextView
            android:id="@+id/textNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/actor"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="#888888"
            android:text="Nombre"
            android:layout_below="@id/buttonSelectImage"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editTextCategoryName"
            android:layout_width="325dp"
            android:layout_height="61dp"
            android:layout_below="@id/textNombre"
            android:layout_marginTop="4dp"
            android:background="@drawable/et_add_category_placeholder"
            android:hint="Nombre de la categoria"
            android:padding="8dp"
            android:fontFamily="@font/poppins_semibold" />

        <!-- Descripción de la categoría -->
        <TextView
            android:id="@+id/textDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/actor"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="#888888"
            android:text="Descripción"
            android:layout_below="@id/editTextCategoryName"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editTextCategoryDescription"
            android:layout_width="325dp"
            android:layout_height="61dp"
            android:layout_below="@id/textDescripcion"
            android:layout_marginTop="4dp"
            android:background="@drawable/et_add_category_placeholder"
            android:hint="Descripción de la categoria"
            android:padding="8dp"
            android:fontFamily="@font/poppins_semibold" />

        <!-- Botón "Crear categoria" -->
        <LinearLayout
            android:id="@+id/buttonSaveCategory"
            android:layout_width="284dp"
            android:layout_height="51dp"
            android:layout_below="@id/editTextCategoryDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#1ACD81"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp">

            <TextView
                android:id="@+id/textSaveCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Crear categoria"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
